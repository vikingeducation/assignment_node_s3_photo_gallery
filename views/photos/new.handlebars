<div class="row">
  <header class="page-header">
    <h1>New Photo</h1>
  </header>

  <form action="{{ photosPath }}" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="photo_file">Photo File</label>
      <input type="file" class="form-control" name="photo[file]" id="photo_file">
    </div>
    <div class="form-group">
      <label for="photo_description">Description</label>
      <input type="text" class="form-control" name="photo[description]" id="photo_description">
    </div>

    <div class="form-group">
      <input type="submit" class="btn btn-primary">
    </div>
  </form>
</div>