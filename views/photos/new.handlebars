<header class="page-header">
  <h1>New Photo</h1>
  <a href="/photos">Photos Index</a>
</header>

<form action="/photos" method="post" enctype="multipart/form-data">
<input type="hidden" value="{{user.id}}" name="userId" />
  <div class="form-group">
    <label for="photo_file">Photo File</label>
    <input type="file" class="form-control" name="photo[file]" id="photo_file">
  </div>
    <div class="form-group">
    <label for="photo_name">Photo Name</label>
    <input type="text" class="form-control" name="photo[name]" id="photo_name">
  </div>
    <div class="form-group">
    <label for="photo_description">Photo Description</label>
    <textarea class="form-control" name="photo[description]" id="photo_description"></textarea>
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>








