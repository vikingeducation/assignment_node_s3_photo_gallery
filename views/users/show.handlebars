<header class="page-header">
  <h1>{{selectedUser.fname}} {{selectedUser.lname}}</h1>
  <h3>{{selectedUser.email}}</h3>
</header>
<div class="row">
  {{#each photos as |photo key|}}
    <div class="col-xs-6 col-sm-5 col-sm-offset-1" style="text-align:right; border: 2px solid black; border-radius: 2em; margin-left: 2em; padding:1em;">

      <div style="text-align:left; word-wrap: break-word;">
        <a href="/photos/{{photo.key}}"><img src="{{ photo.url }}" alt="Photo"></a>
        <div class="caption">
          <h3>{{ photo.photoName }}</h3>
        </div>
      </div>

    </div>
  {{/each}}
</div>