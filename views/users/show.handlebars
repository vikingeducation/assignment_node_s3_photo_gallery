<header class="page-header">
  <h1>User: {{profile.fname}} {{profile.lname}}</h1>
</header>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Key</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>First Name</td>
          <td>{{profile.fname}}</td>
        </tr>
        <tr>
          <td>Last Name</td>
          <td>{{profile.lname}}</td>
        </tr>
        <tr>
          <td>Email</td>
          <td>{{profile.email}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

{{#if profile.photos.length}}
  <div class="row">
    <hr>
    <h3>Photos uploaded by {{profile.fname}} {{profile.lname}}</h3>
    {{#each profile.photos as |photo|}}
      <div class="col-sm-4">
        <div class="thumbnail gallery-thumbnail">
          <a href="{{photosPath}}/{{photo.id}}">
            <img src="{{photo.url}}" alt="Photo" class="gallery-img">
          </a>
          <div class="caption">
            <p>{{photo.name}}</p>
            {{#if (canDelete ../user photo)}}
              <p>
                <span>&nbsp;</span>
                <span class="pull-right"><a class="btn btn-xs btn-danger" href="{{photosPath}}/{{photo.name}}?_method=delete">Delete</a></span>
              </p>
            {{/if }}
          </div>
        </div>
      </div>
    {{/each }}
  </div>
{{else }}
  <p class="text-danger">No photos yet</p>
{{/if }}
