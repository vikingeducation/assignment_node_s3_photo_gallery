<div class="row">
  <div class="col-sm-12">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">Sign Up</div>
        <div class="panel-body">
          <form action="{{usersPath}}" method="post">
            <div class="form-group">
              <input type="text" name="user[fname]" value="" placeholder="First Name" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="user[lname]" value="" placeholder="Last Name" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="user[email]" value="" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" name="user[password]" value="" placeholder="Password" class="form-control">
            </div>
            <button class="btn btn-primary">Sign Up</button>
          </form>
        </div>
        <div class="panel-footer">
          <a href="{{loginPath}}">Or Log In</a>
        </div>
      </div>
    </div>
  </div>
</div>
